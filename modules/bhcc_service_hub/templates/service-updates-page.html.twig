
{% if items %}
  <div class="servicehub--update striped">
    <div class="servicehub--update_inner">
      {% for item in items %}
      <ul>
        <li>{{ item.date|date("d.m.Y") }}</li>
        <li>{{ item.description }}</li>
        <li><a class="read-more" href="{{ item.url }}">Read more</a></li>
      </ul>
      {% endfor %}
    </div>
  </div>
{% endif %}
